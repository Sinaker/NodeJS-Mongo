<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(errorMsg.length> 0) { %>
                    <div style="display: flex" class="user-message user-message__danger">
                        <span>
                            <span class="danger_icon"><i class="fa-solid fa-circle-exclamation"></i></span>
                            <b>
                                <%= (errorMsg) ? errorMsg : '' %>
                            </b>
                        </span>
                
                        <span onClick="this.parentElement.style.display = 'none';">
                            <i style="margin-right: 0.5rem; cursor: pointer;" class="fa-solid fa-xmark"></i>
                        </span>
                    </div>
                    <% } %>
                
                <form class="signup-form" action="/signup" method="POST">
                    <div class="form-control">
                        <label for="email">E-Mail</label>
                        <input 
                        class="<%= errors.length > 0 ? (errors.find(error => error.path ==='email') ? 'invalid' : 'valid') : '' %>"
                        type="email" 
                        name="email" 
                        id="email" 
                        value="<%= oldInput.email %>">
                        
                    </div>
                    <div class="form-control">
                        <label for="password">Password</label>
                        <input 
                        class="<%= errors.length > 0 ? (errors.find(error => error.path ==='password') ? 'invalid' : 'valid') : '' %>"
                        type="password" 
                        name="password" 
                        id="password" 
                        value="<%= oldInput.password %>">
                    </div>
                    <div class="form-control">
                        <label for="confirmPassword">Confirm Password</label>
                        <input 
                        class="<%= errors.length > 0 ? (errors.find(error => error.path ==='confirmPassword') ? 'invalid' : 'valid') : '' %>"
                        type="password" 
                        name="confirmPassword" 
                        id="confirmPassword" 
                        value="<%= oldInput.confirmPassword %>">
                    </div>
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    <button class="btn" type="submit">Sign Up!</button>
                </form>
            </main>

            <%- include('../includes/end.ejs') %>